syntax on

set noshowmode
set noerrorbells

set tabstop=4 softtabstop=4
set shiftwidth=4
set expandtab

set autoindent
set smartindent
set cindent
set nowrap

set hlsearch
set incsearch
set smartcase

set noswapfile
set nobackup

set undofile
set undodir=~/.local/share/nvim/undo

set number
set relativenumber

set t_Co=256
set termguicolors
set background=dark
colorscheme sitruuna-blue

let g:lightline = {
      \ 'colorscheme': 'sitruuna',
      \ }
